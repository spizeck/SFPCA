rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images can be uploaded by authenticated users
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Animal photos
    match /animals/{animalId}/{photoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Team photos
    match /team-photos/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
